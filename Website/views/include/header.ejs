<div class="modal fade col-xs-12" id="pointsModel" role="dialog">
  <div class="modal-dialog">
    <!-- Modal content-->
    
    <form action="http://localhost:3050/admin/editPoints" method="POST" >
      <div class="modal-content">
      <div class="modal-header">
        <div class="close whiteDiv" data-dismiss="modal">x</div>
